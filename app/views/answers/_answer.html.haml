.answer.mb-2{ "data-answer-id": "#{answer.id}", class: ("best-answer" if answer.best?) }
  .answer-body
    -if answer.best?
      %i.fas.fa-check.fa-lg
    .voting-links
      = link_to polymorphic_path(answer, action: :upvote), method: :post, remote: true, class: 'upvote-link' do
        %i.fas.fa-arrow-up
      .vote-count
        = answer.votes.summarize
      = link_to polymorphic_path(answer, action: :downvote), method: :post, remote: true, class: 'downvote-link' do
        %i.fas.fa-arrow-down
    .answer-text
      =answer.body
  -if current_user&.author?(answer)
    =link_to 'Edit Answer', edit_answer_path(answer), data: {link_id: answer.id}, remote: true
    =link_to 'Delete Answer', answer, method: :delete , remote: true
  -if current_user&.author?(answer.question) && !answer.best
    =link_to 'Mark as best', best_answer_path(answer), method: :patch, remote: true
  -if answer.files.attached?
    = render "shared/files", resource: answer
  -if answer.links.any?
    = render "shared/links", resource: answer
