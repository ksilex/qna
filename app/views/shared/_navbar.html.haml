%nav.navbar.mb-2.navbar-expand-lg.py-2.navbar-light{style: "background-color: #a6feff;"}
  .container-fluid
    %a.navbar-brand{href: root_path} StackUnderflow
    %button.navbar-toggler{"aria-controls": "navbarSupportedContent", "aria-expanded": "false", "data-bs-target": "#navbarSupportedContent", "data-bs-toggle": "collapse"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.ms-auto.mb-2.mb-lg-0
        - if current_user
          %li.nav-item
            = link_to 'Sign Out', destroy_user_session_path, class: "nav-link", method: :delete
        - else
          %li.nav-item
            = link_to 'Sign In', new_user_session_path, class: "nav-link"
          %li.nav-item
            = link_to 'Sign Up', new_user_registration_path, class: "nav-link"
